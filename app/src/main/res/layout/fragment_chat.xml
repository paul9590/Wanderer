<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/viewFrChat"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/imb_x2"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/viewChat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/editChat"
        android:padding="20dp"
        android:paddingBottom="32dp"/>

    <EditText
        android:id="@+id/editChat"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_margin="5dp"
        android:paddingStart="5dp"
        app:layout_constraintLeft_toLeftOf="@id/viewFrChat"
        app:layout_constraintRight_toLeftOf="@id/viewFrChat"
        app:layout_constraintBottom_toBottomOf="@id/viewFrChat"
        android:background="@drawable/shape_rectangle"/>

    <ImageButton
        android:background="@drawable/imb_submit"
        android:id="@+id/btnRoomChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/editChat"
        app:layout_constraintBottom_toBottomOf="@id/editChat"
        android:layout_marginRight="5dp"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>